<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:text="@string/response_type" />
        <TextView
            android:id="@+id/tvResponseType" />
    </TableRow>

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:layout_width="0dp"
            android:text="@string/client_id" />
        <TextView
            android:id="@+id/tvClientId"
            android:textIsSelectable="true"
            android:singleLine="true" />
    </TableRow>

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:text="@string/redirect_uri" />
        <TextView
            android:id="@+id/tvRedirectUri"
            android:singleLine="true" />
    </TableRow>

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:layout_height="match_parent"
            android:text="@string/scope" />
        <LinearLayout>
            <EditText
                android:singleLine="true"
                android:id="@+id/et_ANW_SCOPE"/>
            <Button
                android:id="@+id/btnScope"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="3dp"
                android:text="선택" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:text="@string/client_info" />
        <EditText
            android:id="@+id/et_ANW_CLIENT_INFO" />
    </TableRow>

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:text="@string/state" />
        <EditText
            android:singleLine="true"
            android:id="@+id/et_ANW_STATE" />
    </TableRow>

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:text="@string/auth_type" />
        <TextView
            android:id="@+id/tvAuthType" />
    </TableRow>

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:text="@string/lang" />
        <EditText
            android:inputType="text"
            android:id="@+id/et_ANW_LANG"/>
    </TableRow>

    <TableRow
        android:padding="5dip">
        <me.grantland.widget.AutofitTextView
            android:text="@string/account_hold_auth_yn" />
        <EditText
            android:id="@+id/et_ANW_ACCOUNT_HOLD_AUTH_YN"/>
    </TableRow>

